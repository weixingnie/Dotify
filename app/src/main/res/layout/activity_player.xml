<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="12dp"
    tools:context=".PlayerActivity">

    <Button
        android:id="@+id/btnSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/musicCover"
        android:text="SETTINGS"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"
        />

    <ImageView
        android:id="@+id/musicCover"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:background="#3F5185"
        android:contentDescription="a picture of music album"
        app:layout_constraintDimensionRatio="1:1"
        app:layout_constraintTop_toBottomOf="@id/btnSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/strangers_cover_art"
        />

    <TextView
        android:id="@+id/albumName"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/musicCover"
        app:layout_constraintStart_toStartOf="@id/musicCover"
        app:layout_constraintEnd_toEndOf="@id/musicCover"
        android:text="Strangers"
        android:textSize="40sp"
        android:textColor="@color/black"
        android:textAlignment="center"
        />

    <TextView
        android:id="@+id/artistName"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/albumName"
        app:layout_constraintStart_toStartOf="@id/albumName"
        app:layout_constraintEnd_toEndOf="@id/albumName"
        android:textAlignment="center"
        android:text="Seven Lions featuring Tove Lo, Myon, Sharman, Albert Einstein"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:maxLines="1"
        android:ellipsize="end"
        />

    <TextView
        android:id="@+id/playTimes"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/artistName"
        app:layout_constraintStart_toStartOf="@id/artistName"
        app:layout_constraintEnd_toEndOf="@id/artistName"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/playTimes">
        <ImageView
            android:id="@+id/previousButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_previous"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="prevSong"
            />

        <ImageView
            android:id="@+id/playButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_play"
            app:layout_constraintStart_toEndOf="@id/previousButton"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="playSong"
            />

        <ImageView
            android:id="@+id/nextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_next"
            app:layout_constraintStart_toEndOf="@id/playButton"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:onClick="nextSong"
            />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>